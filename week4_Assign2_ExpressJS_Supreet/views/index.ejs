<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>EJS Template</title>
  </head>
  <body>
    <div class="container mt-3">
      <div class="row">
        <div class="col-md-4 offset-md-3">
          <h2 class="mb-3">Superhero Information</h2>
          <form action="#" method="post">
            <div class="mb-1">
              <label for="hero-title">Enter Title</label>
              <input class="form-control" required type="text" id="hero-title"       name="htitle"/>
            </div>
            <div class="mb-1">
              <label for="hero-firstname">Enter Firstname</label>
              <input class="form-control" required type="text" id="hero-firstname"
                name="hfname"/>
            </div>
            <div class="mb-1">
              <label for="hero-lastname">Enter Lastname</label>
              <input class="form-control" required type="text" id="hero-lastname"
                name="hlname"/>
            </div>
            <div class="mb-1">
              <label for="hero-power">Enter Power Range</label>
              <input class="form-range" required type="range" id="hero-power" name="hpower"
                min="0" max="100" step="5"/>
            </div>
            <div class="mb-1">
              <label for="hero-city">Enter City</label>
              <input class="form-control" required type="text" id="hero-city"      name="hcity"/>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <hr>
          <table class="table">
            <thead>
              <tr class="table-dark">
                <th scope="col">Title</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Power</th>
                <th scope="col">City</th>
              </tr>
            </thead>
            <tbody>
              <% dataSet.forEach((hero) => { %> 
                <tr class="table-success">
                  <td> <%=hero.htitle %> </td>
                  <td> <%=hero.hfname %> </td>
                  <td> <%=hero.hlname %> </td>
                  <td> <%=hero.hpower %> </td>
                  <td> <%=hero.hcity %> </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
