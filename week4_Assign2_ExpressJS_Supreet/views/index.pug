doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    title PUG Template
  body
    .container.mt-3
      .row
      .col-md-4.offset-md-3
        h2.mb-3 Superhero Information
        form(action='/submit', method='post')
        .mb-1
          label(for='hero-title') Enter Title
          input#hero-title.form-control(type='text', name='htitle')
        .mb-1
          label(for='hero-firstname') Enter Firstname
          input#hero-firstname.form-control(type='text', name='hfname')
        .mb-1
          label(for='hero-lastname') Enter Lastname
          input#hero-lastname.form-control(type='text', name='hlname')
        .mb-1
          label(for='hero-power') Enter Power Range
          input#hero-power.form-range(type='range', name='hpower', min='0', max='100', step='5')
        .mb-1
          label(for='hero-city') Enter City
          input#hero-city.form-control(type='text', name='hcity')
        button.btn.btn-primary(type='submit') Submit
      hr
      table.table
        thead
          tr.table-dark
            th(scope='col') Title
            th(scope='col') Firstname
            th(scope='col') Lastname
            th(scope='col') Power
            th(scope='col') City
        tbody
          each hero in dataSet
            tr.table-success
              td=  hero.htitle  
              td=  hero.hfname  
              td=  hero.hlname  
              td=  hero.hpower  
              td=  hero.hcity  



            